.badge
  display inline-flex
  align-items center
  justify-content center
  font-size 0.6em
  height 24px
  line-height 16px
  padding 0 10px
  white-space nowrap
  font-weight normal
  border-radius 30px
  text-transform uppercase
  color #FFFFFF

  &.primary
    background $primary-color

  &.secondary
    background $secondary-color

  &.tertiary
    background $tertiary-color

  &.-inverted
    background #FFFFFF

    &.primary
      color $primary-color

    &.secondary
      color $secondary-color
